<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tours"
    tools:context=".games.guessWordActivities.ToursActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingStart="90dp"
        android:text="guess word Tours"
        android:textColor="#C748E3"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toursImage1"
        android:layout_width="145dp"
        android:layout_height="131dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/toursImage2"
        android:layout_width="129dp"
        android:layout_height="121dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/two" />

    <ImageView
        android:id="@+id/toursImage3"
        android:layout_width="152dp"
        android:layout_height="134dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/three" />

    <ImageView
        android:id="@+id/toursImageExit"
        android:layout_width="97dp"
        android:layout_height="80dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tours_exit" />


</androidx.constraintlayout.widget.ConstraintLayout>