<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_200"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/SSImageExit"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/SSImage2"
        android:layout_width="165dp"
        android:layout_height="180dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/port2" />

    <ImageView
        android:id="@+id/SSImage1"
        android:layout_width="165dp"
        android:layout_height="180dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/port1" />

    <EditText
        android:id="@+id/SSWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:hint="ბათურ"
        android:letterSpacing="2.1"
        android:maxLength="5"
        android:paddingStart="4dp"
        android:paddingBottom="20dp"
        android:textColor="#1B605A"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/SSImage4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="264dp"
        android:src="@drawable/ic_baseline_crop_portrait_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SSImage3" />

    <ImageView
        android:id="@+id/SSImage6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/SSImage5"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />

    <Button
        android:id="@+id/SSSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#075153"
        android:text="შეყვანა"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/SSImage3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />

    <ImageView
        android:id="@+id/SSImage7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SSImage6"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />

    <ImageView
        android:id="@+id/SSImage5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SSImage4"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />

</androidx.constraintlayout.widget.ConstraintLayout>