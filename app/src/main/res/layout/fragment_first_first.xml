<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_200"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/FFImageExit"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/FFImage2"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/juja2" />

    <ImageView
        android:id="@+id/FFImage1"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/juja1" />


    <ImageView
        android:id="@+id/FFImage5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FFImage4"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />

    <ImageView
        android:id="@+id/FFImage4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="256dp"
        android:src="@drawable/ic_baseline_crop_portrait_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FFImage3" />

    <EditText
        android:id="@+id/FFWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:ems="10"
        android:hint="ბათუ"
        android:letterSpacing="1.8"
        android:maxLength="4"
        android:paddingStart="49dp"
        android:textColor="#1B605A"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/FFSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="#075153"
        android:text="შეყვანა"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/FFImage3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />

    <ImageView
        android:id="@+id/FFImage6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/FFImage5"
        app:srcCompat="@drawable/ic_baseline_crop_portrait_24" />


</androidx.constraintlayout.widget.ConstraintLayout>